<% layout('layouts/boilerplate') -%>

<div class="container mt-5">
    <div class="row">
        <div class="col-sm-7 col-md-6 col-lg-5 mx-auto">
            <div class="card">
                <div class="card-body">
                    <h2 class="text-center">Reset Password</h2>
                    <form action="/forget" method="POST" class="needs-validation" novalidate>
                        <div class="form-group mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name='email' required autofocus
                                placeholder="Email">
                            <div class="form-text">Enter The Email Address Linked To Your Account</div>
                            <div class="valid-feedback">
                                Looks Good!
                            </div>
                            <div class="invalid-feedback">
                                Invalid Email
                            </div>
                        </div>
                        <button class="btn btn-primary w-100">Send</button>
                    </form>
                    <div class="mt-2 text-center">
                        Don't have an account?
                        <a href="/register">Sign Up</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/campgrounds/javascripts/validateForm.js"></script>